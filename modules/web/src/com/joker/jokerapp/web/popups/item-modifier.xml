<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.joker.jokerapp.web.popups">
    <data>
        <collection id="modifierOrderLinesDc" class="com.joker.jokerapp.entity.OrderLine" view="order-line-view">
            <loader>
            </loader>
        </collection>
        <instance id="ticketDc" class="com.joker.jokerapp.entity.Ticket" view="ticket-view"/>
    </data>
    <dialogMode width="1600" height="900"/>
    <layout margin="true"
            spacing="true"
            stylename="mainLayout">
        <split id="firstSplit"
               height="100%"
               maxSplitPosition="33%"
               minSplitPosition="33%"
               orientation="horizontal"
               pos="33%"
               settingsEnabled="false"
               width="100%">
            <groupBox id="modifierOrderLinesGroupBox"
                      expand="modifierOrderLinesScrollBox"
                      height="100%"
                      settingsEnabled="false"
                      spacing="true">
                <scrollBox id="modifierOrderLinesScrollBox">
                </scrollBox>
                <buttonsPanel id="modifierOrderLinesButtonPanel"
                              align="BOTTOM_LEFT"
                              height="80px"
                              width="100%">
                    <button id="okBtn"
                            align="BOTTOM_LEFT"
                            caption="msg://OK"
                            height="60px"
                            stylename="okBtn"
                            width="100px"/>
                    <button id="modifierOrderLinesRemoveBtn"
                            align="BOTTOM_RIGHT"
                            caption="REMOVE"
                            height="60px"
                            width="120px" stylename="orderScreenFunctionBtn"/>
                </buttonsPanel>
            </groupBox>
            <split id="secondSplit"
                   height="100%"
                   maxSplitPosition="79%"
                   minSplitPosition="79%"
                   orientation="horizontal"
                   pos="79%"
                   settingsEnabled="false"
                   width="100%">
                <groupBox id="modifierItemGroupBox"
                          expand="modifierItemGridScrollBox"
                          height="100%"
                          settingsEnabled="false"
                          spacing="true">
                    <scrollBox id="modifierItemGridScrollBox">
                        <grid id="modifierItemGrid"
                              spacing="true"
                              width="100%">
                            <columns count="4"/>
                            <rows>
                                <row/>
                            </rows>
                        </grid>
                    </scrollBox>
                    <buttonsPanel id="modifierItemsButtonPanel"
                                  align="BOTTOM_LEFT"
                                  height="80px"
                                  width="350px">
                        <button id="addModifierBtn"
                                align="BOTTOM_LEFT"
                                caption="Add Modifier"
                                height="60px"
                                width="160px" stylename="modifierButtonPushed"/>
                        <button id="removeModifierBtn"
                                align="BOTTOM_LEFT"
                                caption="Remove Modifier"
                                height="60px"
                                width="160px" stylename="modifierButtonNotPushed"/>
                    </buttonsPanel>
                </groupBox>
                <groupBox id="modifierCategoriesGroupBox"
                          height="100%"
                          settingsEnabled="false"
                          spacing="true">
                    <scrollBox height="100%"
                               margin="true">
                        <grid id="modifierCategoriesGrid"
                              spacing="true"
                              width="100%">
                            <columns count="1"/>
                            <rows>
                                <row/>
                            </rows>
                        </grid>
                    </scrollBox>
                </groupBox>
            </split>
        </split>
    </layout>
</window>