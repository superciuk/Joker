<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.joker.jokerapp.web.productitemcategory.ProductItemCategoryBrowse"
        focusComponent="productItemCategoriesTable"
        lookupComponent="productItemCategoriesTable"
        messagesPack="com.joker.jokerapp.web.productitemcategory">
    <dsContext>
        <groupDatasource id="productItemCategoriesDs"
                         class="com.joker.jokerapp.entity.ProductItemCategory"
                         view="productCategory-view">
            <query>
                <![CDATA[select e from jokerapp$ProductItemCategory e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productItemCategoriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="productItemCategoriesTable"
                datasource="productItemCategoriesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="productItemCategoriesTable"
                    multiselect="true"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="visible"/>
                <column id="sortOrder"/>
            </columns>
            <rows datasource="productItemCategoriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="productItemCategoriesTable.create"/>
                <button id="editBtn"
                        action="productItemCategoriesTable.edit"/>
                <button id="removeBtn"
                        action="productItemCategoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
