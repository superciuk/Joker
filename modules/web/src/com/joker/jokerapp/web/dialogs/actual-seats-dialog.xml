<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.joker.jokerapp.web.dialogs.ActualSeatsDialog"
        messagesPack="com.joker.jokerapp.web.dialogs">
    <dialogMode forceDialog="true"
                height="300"
                width="400"/>
    <layout margin="true">
        <vbox spacing="true"
              width="AUTO">
            <label id="message"
                   value="msg://actualSeatsDialog.msg"/>
            <textField id="seatsText"/>
            <buttonsPanel>
                <button id="okBtn"
                        caption="msg://OK"
                        invoke="onOkBtnClick"/>
                <button id="cancelBtn"
                        caption="msg://Cancel"
                        invoke="onCancelBtnClick"/>
            </buttonsPanel>
        </vbox>
    </layout>
</window>
