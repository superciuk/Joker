<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.joker.jokerapp.web.dialogs.ItemPriceManualModifierDialog"
        messagesPack="com.joker.jokerapp.web.dialogs">
    <dialogMode forceDialog="true"
                height="520"
                width="800"/>
    <layout margin="true">
        <groupBox height="100%"
                  orientation="horizontal"
                  width="100%">
            <vbox height="100%"
                  spacing="true">
                <vbox height="250px">
                    <hbox height="100px"
                          spacing="true"
                          width="250px">
                        <label id="seats"
                               align="MIDDLE_LEFT"
                               height="40px"
                               stylename="seatsLabel"
                               value="Prezzo:"/>
                        <textField id="priceModifier"
                                   align="MIDDLE_LEFT"
                                   datatype="string"
                                   height="40px"
                                   stylename="newPriceTextField"
                                   width="120px"/>
                    </hbox>
                </vbox>
                <buttonsPanel align="BOTTOM_LEFT"
                              height="60px"
                              width="350px">
                    <button id="okBtn"
                            align="MIDDLE_LEFT"
                            caption="msg://OK"
                            height="60px"
                            invoke="onOkBtnClick"
                            stylename="okBtn"
                            width="150px"/>
                    <button id="cancelBtn"
                            align="MIDDLE_RIGHT"
                            caption="msg://Cancel"
                            height="60px"
                            invoke="onCancelBtnClick"
                            stylename="cancelBtn"
                            width="150px"/>
                </buttonsPanel>
            </vbox>
            <vbox height="100%">
                <buttonsPanel align="TOP_RIGHT"
                              margin="true">
                    <button id="numPadBtn7"
                            caption="7"
                            height="100px"
                            invoke="onNumPadBtn7Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn8"
                            caption="8"
                            height="100px"
                            invoke="onNumPadBtn8Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn9"
                            caption="9"
                            height="100px"
                            invoke="onNumPadBtn9Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                </buttonsPanel>
                <buttonsPanel align="TOP_RIGHT"
                              margin="true">
                    <button id="numPadBtn4"
                            caption="4"
                            height="100px"
                            invoke="onNumPadBtn4Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn5"
                            caption="5"
                            height="100px"
                            invoke="onNumPadBtn5Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn6"
                            caption="6"
                            height="100px"
                            invoke="onNumPadBtn6Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                </buttonsPanel>
                <buttonsPanel align="TOP_RIGHT"
                              margin="true">
                    <button id="numPadBtn1"
                            caption="1"
                            height="100px"
                            invoke="onNumPadBtn1Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn2"
                            caption="2"
                            height="100px"
                            invoke="onNumPadBtn2Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn3"
                            caption="3"
                            height="100px"
                            invoke="onNumPadBtn3Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                </buttonsPanel>
                <buttonsPanel align="TOP_RIGHT"
                              margin="true">
                    <button id="numPadBtnC"
                            caption="C"
                            height="100px"
                            invoke="onNumPadBtnCClick"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtn0"
                            caption="0"
                            height="100px"
                            invoke="onNumPadBtn0Click"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                    <button id="numPadBtnDot"
                            caption="."
                            height="100px"
                            invoke="onNumPadBtnDotClick"
                            stylename="virtualKeyBtn"
                            width="100px"/>
                </buttonsPanel>
            </vbox>
        </groupBox>
    </layout>
</window>
