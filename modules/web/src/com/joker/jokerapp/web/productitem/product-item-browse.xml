<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.joker.jokerapp.web.productitem.ProductItemBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.joker.jokerapp.web.productitem">
    <dsContext>
        <datasource id="productItemDs"
                    class="com.joker.jokerapp.entity.ProductItem"
                    view="productItem-view">
            <collectionDatasource id="modifierCategoriesDs"
                                  property="modifierCategories"/>
        </datasource>
        <collectionDatasource id="productItemsDs"
                              class="com.joker.jokerapp.entity.ProductItem"
                              view="productItem-view">
            <query>
                <![CDATA[select e from jokerapp$ProductItem e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="productModifierCategoriesDs"
                              class="com.joker.jokerapp.entity.ProductModifierCategory">
            <query>
                <![CDATA[select e from jokerapp$ProductModifierCategory e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="productItemCategoriesDs"
                              class="com.joker.jokerapp.entity.ProductItemCategory">
            <query>
                <![CDATA[select e from jokerapp$ProductItemCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               responsive="true"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="true"
                  responsive="true"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="productItemsDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       editable="true"
                       multiselect="true"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="category"/>
                        <column id="price"/>
                        <column id="sortOrder"/>
                        <column id="visible"/>
                    </columns>
                    <rows datasource="productItemsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="duplicateBtn"
                                caption="msg://Duplicate"
                                invoke="onDuplicateBtnClick"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox"
                           margin="true"
                           responsive="true">
                    <fieldGroup id="fieldGroup"
                                datasource="productItemDs"
                                width="100%">
                        <column width="100%">
                            <field property="name"/>
                            <field optionsDatasource="productItemCategoriesDs"
                                   property="category"/>
                            <field property="price"/>
                            <field property="sortOrder"/>
                            <field property="visible"/>
                        </column>
                    </fieldGroup>
                    <split height="20px"
                           orientation="vertical"
                           width="100%"/>
                    <optionsGroup id="modifierCategories"
                                  caption="Modifier Categories"
                                  datasource="productItemDs"
                                  multiselect="true"
                                  optionsDatasource="productModifierCategoriesDs"
                                  property="modifierCategories"/>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
