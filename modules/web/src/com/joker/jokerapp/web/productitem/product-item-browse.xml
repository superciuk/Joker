<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.joker.jokerapp.web.productitem.ProductItemBrowse"
        focusComponent="productItemsTable"
        lookupComponent="productItemsTable"
        messagesPack="com.joker.jokerapp.web.productitem">
    <dsContext>
        <groupDatasource id="productItemsDs"
                         class="com.joker.jokerapp.entity.ProductItem"
                         view="productItem-view">
            <query>
                <![CDATA[select e from jokerapp$ProductItem e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productItemsTable"
            spacing="true">
        <filter id="filter"
                applyTo="productItemsTable"
                datasource="productItemsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="productItemsTable"
                    multiselect="true"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="category"/>
                <column id="visible"/>
                <column id="price"/>
                <column id="sortOrder"/>
                <column id="printerGroup"/>
            </columns>
            <rows datasource="productItemsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="productItemsTable.create"/>
                <button id="editBtn"
                        action="productItemsTable.edit"/>
                <button id="removeBtn"
                        action="productItemsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
