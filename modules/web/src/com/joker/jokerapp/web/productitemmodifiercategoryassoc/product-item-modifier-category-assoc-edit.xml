<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.joker.jokerapp.web.productitemmodifiercategoryassoc.ProductItemModifierCategoryAssocEdit"
        datasource="productItemModifierCategoryAssocDs"
        focusComponent="fieldGroup"
        messagesPack="com.joker.jokerapp.web.productitemmodifiercategoryassoc">
    <dsContext>
        <datasource id="productItemModifierCategoryAssocDs"
                    class="com.joker.jokerapp.entity.ProductItemModifierCategoryAssoc"
                    view="productItemModifierCategoryAssoc-view"/>
        <groupDatasource id="productModifierCategoriesDs"
                         class="com.joker.jokerapp.entity.ProductModifierCategory"
                         view="_minimal">
            <query>
                <![CDATA[select e from jokerapp$ProductModifierCategory e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="productItemModifierCategoryAssocDs">
            <column width="250px">
                <field optionsDatasource="productModifierCategoriesDs"
                       property="productModifierCategory"/>
                <field property="minNumber"/>
                <field property="maxNumber"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
