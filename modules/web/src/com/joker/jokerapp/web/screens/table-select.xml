<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.joker.jokerapp.web.screens.TableSelect"
        messagesPack="com.joker.jokerapp.web.screens">
    <dsContext>
        <groupDatasource id="tableItemsDs"
                         class="com.joker.jokerapp.entity.TableItem"
                         view="tableItem-view">
            <query>
                <![CDATA[select e from jokerapp$TableItem e order by e.tableNumber]]>
            </query>
        </groupDatasource>
        <datasource id="tableItemDs"
                    class="com.joker.jokerapp.entity.TableItem"
                    view="tableItem-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout margin="true">
        <split height="100%"
               maxSplitPosition="90%"
               minSplitPosition="90%"
               orientation="vertical"
               pos="90%"
               width="100%">
            <grid id="grid"
                  margin="true"
                  spacing="true">
                <columns count="1"/>
                <rows>
                    <row/>
                </rows>
            </grid>
            <button id="empty"
                    caption="EMPTY"
                    invoke="onEmptyClick"/>
        </split>
    </layout>
</window>
