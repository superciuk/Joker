<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.joker.jokerapp.web.productmodifier.ProductModifierBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.joker.jokerapp.web.productmodifier">
    <dsContext>
        <datasource id="productModifierDs"
                    class="com.joker.jokerapp.entity.ProductModifier"
                    view="productModifier-view"/>
        <groupDatasource id="productModifiersDs"
                         class="com.joker.jokerapp.entity.ProductModifier"
                         view="productModifier-view">
            <query>
                <![CDATA[select e from jokerapp$ProductModifier e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="categoriesDs"
                              class="com.joker.jokerapp.entity.ProductModifierCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from jokerapp$ProductModifierCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="vertical"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="productModifiersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            multiselect="true"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="addPrice"/>
                        <column id="subtractPrice"/>
                        <column id="category"/>
                        <column id="sortOrder"/>
                    </columns>
                    <rows datasource="productModifiersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="productModifierDs">
                        <column width="250px">
                            <field property="name"/>
                            <field property="addPrice"/>
                            <field property="subtractPrice"/>
                            <field optionsDatasource="categoriesDs"
                                   property="category"/>
                            <field property="sortOrder"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
